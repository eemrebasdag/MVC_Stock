@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input class="form-control" type="text" name="URUNAD" required="" maxlength="50" />
    </div>

    <div>
        <label>Marka</label>
        <input class="form-control" type="text" name="MARKA" required="" maxlength="50"/>
    </div>

    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m=> m.TBLKATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.dgr, new {@class ="form-control"})
    </div>

    <div>
        <label>Fiyat</label>
        <input class="form-control" type="text" name="FIYAT" required="" maxlength="50"/>
    </div>

    <div>
        <label>Stok</label>
        <input class="form-control" type="text" name="STOK" required="" maxlength="50"/>
    </div>




    <div style="margin-top:15px;">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>

</form>